@model VShop.Web.Models.ProductViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fa fa-exclamation-triangle me-2"></i> Delete Confirmation
                    </h5>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-warning border-0 bg-warning bg-opacity-10 text-warning-emphasis" role="alert">
                        <i class="fa fa-info-circle me-1"></i> 
                        <strong>Are you sure?</strong> This action cannot be undone.
                    </div>

                    <div class="row mt-4 align-items-center">
                        <div class="col-md-5 text-center mb-3 mb-md-0">
                            <div class="bg-light p-3 rounded border">
                                <img src="@Model.ImageUrl" class="img-fluid rounded" 
                                     style="max-height: 220px; object-fit: contain;" 
                                     alt="@Model.Name" />
                            </div>
                        </div>

                        <div class="col-md-7">
                            <span class="badge bg-secondary mb-2">@Model.CategoryName</span>
                            <h2 class="fw-bold text-dark mb-3">@Model.Name</h2>
                            
                            <p class="text-muted mb-4">
                                @Model.Description
                            </p>

                            <div class="row g-3">
                                <div class="col-6">
                                    <small class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem;">Price</small>
                                    <div class="fs-5 fw-bold text-dark">
                                        @Model.Price.ToString("C")
                                    </div>
                                </div>
                                <div class="col-6">
                                    <small class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem;">Current Stock</small>
                                    <div class="fs-5 fw-bold text-dark">
                                        @Model.Stock units
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light p-3">
                    <form asp-action="DeleteProduct" class="d-flex justify-content-between align-items-center">
                        <input type="hidden" asp-for="Id" />
                        
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 fw-bold">
                            <i class="fa fa-arrow-left me-2"></i> Cancel
                        </a>

                        <button type="submit" class="btn btn-danger px-4 fw-bold shadow-sm">
                            <i class="fa fa-trash me-2"></i> Confirm Delete
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>