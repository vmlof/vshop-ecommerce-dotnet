@model string
@{
    ViewData["Title"] = "Carrinho não Encontrado";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 60vh;">
    <div class="card border-0 shadow-sm text-center" style="max-width: 500px; width: 100%;">
        <div class="card-body p-5">
            <div class="mb-4 position-relative d-inline-block">
                <i class="fas fa-shopping-cart fa-5x text-muted opacity-25"></i>
                <i class="fas fa-exclamation-circle fa-2x text-danger position-absolute bottom-0 end-0 bg-white rounded-circle border border-white"></i>
            </div>

            <h2 class="fw-bold text-dark mb-2">Ops! Carrinho não encontrado</h2>
            
            <p class="text-muted mb-4">
                Não conseguimos localizar o seu carrinho de compras no momento.
            </p>

            @if (!ViewData.ModelState.IsValid || !string.IsNullOrEmpty(Model))
            {
                <div class="alert alert-danger bg-danger bg-opacity-10 border-0 text-danger d-flex align-items-center justify-content-center gap-2 mb-4" role="alert">
                    <i class="fas fa-times-circle"></i>
                    <span class="fw-semibold">
                        @Html.ValidationMessage("CartNotFound")
                        @Model
                    </span>
                </div>
            }

            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm transition-hover">
                <i class="fas fa-arrow-left me-2"></i> Voltar às Compras
            </a>
        </div>
    </div>
</div>

<style>
    /* Pequeno ajuste para o hover do botão, caso não tenha no global */
    .transition-hover:hover {
        transform: translateY(-2px);
        transition: transform 0.2s ease;
    }
</style>